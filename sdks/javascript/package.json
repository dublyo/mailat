{
  "name": "@mailat/sdk",
  "version": "1.0.0",
  "description": "Official JavaScript/TypeScript SDK for mailat.co API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "email",
    "api",
    "sdk",
    "mailat",
    "transactional",
    "marketing"
  ],
  "author": "mailat.co",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dublyo/mailat"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
