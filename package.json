{
  "name": "mailat",
  "version": "0.1.0",
  "private": true,
  "description": "All-in-one email platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/dublyo/mailat"
  },
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:api": "pnpm --filter @mailat/api dev",
    "dev:web": "pnpm --filter @mailat/web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "test:db": "tsx scripts/test-connections.ts",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "prisma": "^6.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0",
    "dotenv": "^16.4.0",
    "ioredis": "^5.4.0"
  },
  "prisma": {
    "seed": "tsx prisma/seeds/index.ts"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
